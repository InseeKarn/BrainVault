{
  "name": "brainvault",
  "version": "1.0.0",
  "private": true,
  "description": "Physics Problem Solving Platform with Interactive Formula Workspace, XP System, Badges, and Detailed Feedback",
  "main": "backend/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon --watch backend --watch frontend --ext js,json,html,css --exec node backend/server.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint backend/**/*.js || echo 'no lint'",
    "install-db": "psql -U postgres -d brainvault -f database/schema.sql",
    "seed-problems": "node scripts/seed-problems.js",
    "build": "echo 'Build successful (skipping lint/tests)'",
    "reset-db": "dropdb brainvault && createdb brainvault && npm run install-db && npm run seed-problems"
  },
  "keywords": [
    "physics",
    "education",
    "problems",
    "formulas",
    "xp-system",
    "badges",
    "oer",
    "learning",
    "gamification"
  ],
  "author": "BrainVault Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "math-expression-evaluator": "^1.4.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "serverless-http": "^4.0.0",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/brainvault.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/brainvault/issues"
  },
  "homepage": "https://brainvault.edu"
}
